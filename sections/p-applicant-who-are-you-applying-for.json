{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://localhost:3000/schema/definitions/p--who-is-applying",
    "type": "object",
    "required": ["q-applicant-who-are-you-applying-for"],
    "additionalProperties": false,
    "properties": {
        "q-applicant-who-are-you-applying-for": {
            "title": "Who are you applying for?",
            "type": "string",
            "uniqueItems": true,
            "items": {
                "oneOf": [
                    {
                        "title": "Myself",
                        "enum": ["myself"]
                    },
                    {
                        "title": "Someone else",
                        "enum": ["someone-else"]
                    }
                ]
            },
            "errorMessages": {
                "required": "Select Myself if you are the person applying for compensation"
            }
        }
    }
}